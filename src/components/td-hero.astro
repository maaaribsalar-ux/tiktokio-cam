      <h1 class="text-2xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("hero.tiktok_downloader_title")}</h1>
        <p class="mt-2 text-lg leading-8 text-gray-900 dark:text-gray-100">{t("hero.tiktok_downloader_subtitle")}</p>
